<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/body"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/iv_eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyes"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_eyebrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/eyebrows"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/glasses"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arms"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/hat"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mouth"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nose"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shoes"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_mustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mustache"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ears"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <CheckBox
        android:id="@+id/cb_hat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hat"
        android:textSize="20sp"
        android:layout_below="@+id/iv_body"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="26dp" />

    <CheckBox
        android:id="@+id/cb_glasses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="glasses"
        android:textSize="20sp"
        android:layout_below="@+id/iv_body"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"
        android:layout_marginTop="26dp" />

    <CheckBox
        android:id="@+id/cb_eyes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="eyes"
        android:textSize="20sp"
        android:layout_below="@+id/cb_hat"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"/>

    <CheckBox
        android:id="@+id/cb_ears"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ears"
        android:textSize="20sp"
        android:layout_below="@+id/cb_glasses"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp" />

    <CheckBox
        android:id="@+id/cb_arms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="arms"
        android:textSize="20sp"
