        android:layout_height="wrap_content"
        android:text="eyebrows"
        android:textSize="20sp"
        android:layout_below="@+id/cb_ears"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"  />

    <CheckBox
        android:id="@+id/cb_nose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nose"
        android:textSize="20sp"
        android:layout_below="@+id/cb_arms"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"  />

    <CheckBox
        android:id="@+id/cb_mustache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mustache"
        android:textSize="20sp"
        android:layout_below="@+id/cb_eyebrows"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"  />

    <CheckBox
        android:id="@+id/cb_mouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mouth"
        android:textSize="20sp"
        android:layout_below="@+id/cb_nose"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp" />

    <CheckBox
        android:id="@+id/cb_shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shoes"
        android:textSize="20sp"
        android:layout_below="@+id/cb_mustache"
        android:layout_marginStart="288dp"
        android:layout_marginLeft="288dp"  />

</RelativeLayout>